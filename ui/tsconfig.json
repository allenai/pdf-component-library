{
  "compilerOptions": {
    "outDir": "dist/lib",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es2019"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true
  },
  "include": ["index.ts", "src/library/components/*"]
}
